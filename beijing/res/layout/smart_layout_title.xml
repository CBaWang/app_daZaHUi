<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y1200"
    android:orientation="vertical">

    <com.example.custom.DisallowStopListenerLastViewpager
        android:id="@+id/smart_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y360">

    </com.example.custom.DisallowStopListenerLastViewpager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/y16">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_school"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/school" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开学季"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_face"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/face" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="童书"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_clothes"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/clothes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="领券"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_machine"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/machine" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家电"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y16"
        android:background="#efe8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/y16"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_earth"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/earth" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海外购"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_good"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/good" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当当优品"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_book"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/book" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子书"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/smart_layout_heart"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:layout_weight="1"
                android:background="@drawable/heart" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尾品会"
                android:textSize="11sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="@dimen/y16"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y140"
        android:layout_marginTop="@dimen/y25"
        android:background="@drawable/top"
        android:layout_marginBottom="@dimen/y25"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:background="@drawable/titile1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:text="¥1.00"
                android:textColor="#f00"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:background="@drawable/tilte2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:text="¥1.00"
                android:textColor="#f00"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y160"
                android:background="@drawable/title3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:text="¥126.00"
                android:textColor="#f00"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>