<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp" >
    
    <ImageView 
        android:id="@+id/NewsMenuListViewItem_imageView"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_margin="2dp"
        android:background="@drawable/news_pic_default"/>
    <TextView 
        android:id="@+id/NewsMenuListViewItem_TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="呵呵呵呵呵"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_toRightOf="@id/NewsMenuListViewItem_imageView"
        android:layout_centerInParent="true"/>
    
    <TextView 
        android:id="@+id/NewsMenuListViewItem_TextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="我是时间"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_toRightOf="@id/NewsMenuListViewItem_imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"/>
    

</RelativeLayout>
