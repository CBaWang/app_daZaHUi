<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_red_bg" >

        <ImageButton
            android:id="@+id/web_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_marginLeft="5dp" />
        

        <ImageButton
            android:id="@+id/web_activity_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_share"
            android:layout_marginRight="8dp"/>

        <ImageButton
            android:id="@+id/web_activity_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_textsize" 
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/web_activity_share"/>
    </RelativeLayout>
  
    <WebView 
        android:id="@+id/web_activity_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
   
    

</LinearLayout>