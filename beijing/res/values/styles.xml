<?xml version="1.0" encoding="utf-8"?>
 <resources xmlns:android="http://schemas.android.com/apk/res/android">
       <style name="AppTheme" parent="android:Theme.Light">
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowFullscreen">false</item>
       <item name="android:windowContentOverlay">@android:color/transparent</item>
       </style>
       
       <style name="BottomTabStyle">
           <item name="android:layout_width">wrap_content</item>
           <item name="android:layout_height">wrap_content</item>
           <item name="android:layout_gravity">center_vertical</item>
           <item name="android:button">@null</item>
           <item name="android:drawablePadding">3dp</item>
           <item name="android:padding">5dp</item>
           <item name="android:textColor">@drawable/select_text</item>
           <item name="android:layout_weight">1</item>
       </style>


    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:maxHeight">90dp</item>
        <item name="android:indeterminateDuration">500</item>
    </style>

    <style name="MyRatingbarStyle"  parent="android:Widget.Holo.RatingBar.Indicator" >
        <item name="android:progressDrawable">@drawable/five_star</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>

    </style>

    <style name="chat_date_style">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">#BEBDBE</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    </resources>