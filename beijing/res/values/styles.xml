<?xml version="1.0" encoding="utf-8"?>
 <resources xmlns:android="http://schemas.android.com/apk/res/android">
       <style name="AppTheme" parent="android:Theme.Light">
       <item name="android:windowNoTitle">true</item>
       <item name="android:windowFullscreen">false</item>
       <item name="android:windowContentOverlay">@android:color/transparent</item>
       </style>
       
       <style name="BottomTabStyle">
           <item name="android:layout_width">wrap_content</item>
           <item name="android:layout_height">wrap_content</item>
           <item name="android:layout_gravity">center_vertical</item>
           <item name="android:button">@null</item>
           <item name="android:drawablePadding">3dp</item>
           <item name="android:padding">5dp</item>
           <item name="android:textColor">@drawable/select_text</item>
           <item name="android:layout_weight">1</item>
       </style>


    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:minHeight">75dp</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:maxHeight">90dp</item>

    </style>
    </resources>