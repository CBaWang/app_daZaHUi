        </activity>
        <activity android:name="com.example.beijing.LeaderActivity" />
        <activity
            android:name="com.example.beijing.ContentActivity"
            android:theme="@style/Theme.PageIndicatorDefaults" />
        <activity android:name="com.example.beijing.WebActivity" />
